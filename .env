# .env - 主配置文件
# 通过 DB_MODE 控制使用本地还是云端数据库

# ===========================================
# 数据库模式选择 (重要!)
# ===========================================
# local: 使用本地 Docker PostgreSQL
# vercel: 使用 Vercel Postgres
# custom: 使用自定义数据库配置
DB_MODE=local

# ===========================================
# 本地数据库配置 (DB_MODE=local 时使用)
# ===========================================
LOCAL_DB_HOST=postgres
LOCAL_DB_PORT=5432
LOCAL_DB_USER=notes_user
LOCAL_DB_PASSWORD=notes_password_2024
LOCAL_DB_NAME=notes_db

# ===========================================
# Vercel 数据库配置 (DB_MODE=vercel 时使用)
# ===========================================
# 从 Vercel 控制台复制这些值
VERCEL_POSTGRES_URL=""
# 或者分别配置
VERCEL_POSTGRES_HOST=""
VERCEL_POSTGRES_USER=""
VERCEL_POSTGRES_PASSWORD=""
VERCEL_POSTGRES_DATABASE=""

# ===========================================
# 自定义数据库配置 (DB_MODE=custom 时使用)
# ===========================================
CUSTOM_DB_URL=""
CUSTOM_DB_HOST=""
CUSTOM_DB_PORT=5432
CUSTOM_DB_USER=""
CUSTOM_DB_PASSWORD=""
CUSTOM_DB_NAME=""
CUSTOM_DB_SSLMODE=disable

# ===========================================
# 应用配置
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-2024
SERVER_PORT=9191
GIN_MODE=debug

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_IMAGE_SIZE=10485760
MAX_DOCUMENT_SIZE=52428800
MAX_USER_STORAGE=524288000

# 前端配置
FRONTEND_BASE_URL=https://huage.api.withgo.cn

# ===========================================
# Docker 配置
# ===========================================
# 容器内部端口
CONTAINER_PORT=9191
# 外部映射端口
HOST_PORT=9191

# ===========================================
# 快速切换示例：
# ===========================================
# 使用本地数据库：DB_MODE=local
# 使用 Vercel：  DB_MODE=vercel (记得填写 VERCEL_* 配置)
# 使用自定义：   DB_MODE=custom (记得填写 CUSTOM_* 配置)